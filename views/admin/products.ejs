<%- include('../includes/head.ejs') %>
</head>

<body>
  <%- include('../includes/navigation') %>

  <main>
    <p>ADMIN PRODUCTS</p>
    <% if (products.length > 0) { %>
    <% products.forEach((product) => { %>
    <div class="card card--admin">
      <img src='<%= product.imageUrl %>' alt="<%= product.title %>" />
      <p><span class="card--admin-label">Title:</span> <%= product.title %></p>
      <p><span class="card--admin-label">Price:</span> $<%= product.price %></p>
      <p><span class="card--admin-label">Description:</span> <%= product.description %></p>
      <div class="buttons--admin">
        <button>Edit</button>
        <button>Delete</button>
      </div>
    </div>
    <% }) %>

    <% } else { %>
    <h1>No products registered</h1>
    <% } %>
  </main>
  <%- include('../includes/end') %>